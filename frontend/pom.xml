<?xml version="1.0" ?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.redhat.quarkus.demo</groupId>
        <artifactId>todo</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <artifactId>todo-frontend</artifactId>
    <packaging>jar</packaging>
    <properties>
        <api.version>${parent.version}</api.version>
        <vue.source>${project.basedir}/src/main/frontend</vue.source>
    </properties>
    <dependencies>
        <dependency>
            <groupId>${project.parent.groupId}</groupId>
            <artifactId>todo-jsclient</artifactId>
            <version>${project.parent.version}</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>parse-version</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.github.eirslett</groupId>
                <artifactId>frontend-maven-plugin</artifactId>
                <version>1.8.0</version>
                <executions>
                    <!-- Install NodeJS & NPM -->
                    <execution>
                        <id>node-npm-init</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>install-node-and-npm</goal>
                        </goals>
                        <configuration>
                            <installDirectory>${project.parent.basedir}</installDirectory>
                            <workingDirectory>${project.basedir}/src/main/frontend</workingDirectory>
                            <nodeVersion>${nodejs.version}</nodeVersion>
                        </configuration>
                    </execution>
                    <!-- Set version on frontend NodeJS project -->
                    <execution>
                        <id>set-version</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <configuration>
                            <arguments>version --allow-same-version ${parsedVersion.majorVersion}.${parsedVersion.minorVersion}.${parsedVersion.incrementalVersion}</arguments>
                            <installDirectory>${project.parent.basedir}</installDirectory>
                            <workingDirectory>${vue.source}</workingDirectory>
                        </configuration>
                    </execution>
                    <!-- Install the API Client dependencies -->
                    <execution>
                        <id>2-npm-install</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <configuration>
                            <arguments>install</arguments>
                            <installDirectory>${project.parent.basedir}</installDirectory>
                            <workingDirectory>${project.basedir}/src/main/frontend</workingDirectory>
                        </configuration>
                    </execution>
                    <!-- Install the API Client dependencies -->
                    <execution>
                        <id>3-npm-install-client-sdk</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <configuration>
                            <arguments>install --save-dev ../../../../jsclient/target/classes/</arguments>
                            <installDirectory>${project.parent.basedir}</installDirectory>
                            <workingDirectory>${project.basedir}/src/main/frontend</workingDirectory>
                        </configuration>
                    </execution>
                    <!-- Build the single-page webapp for the frontend -->
                    <execution>
                        <id>quasar-build</id>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <phase>compile</phase>
                        <configuration>
                            <installDirectory>${project.parent.basedir}</installDirectory>
                            <workingDirectory>${project.basedir}/src/main/frontend</workingDirectory>
                            <arguments>run build</arguments>
                        </configuration>
                    </execution>
                    <!-- Run tests against the single-page webapp frontend -->
                    <execution>
                        <id>quasar-test</id>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <phase>test</phase>
                        <configuration>
                            <installDirectory>${project.parent.basedir}</installDirectory>
                            <workingDirectory>${project.basedir}/src/main/frontend</workingDirectory>
                            <arguments>run test</arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>